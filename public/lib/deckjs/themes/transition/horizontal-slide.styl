.csstransitions.csstransforms 
	overflow-x:hidden
	
	.deck-container > .slide 
		transition: transform 500ms ease-in-out
	
	.deck-container:not(.deck-menu) 
		> .slide 
			position:absolute
			top:0
			left:0
			box-sizing: border-box
			width:100%
			padding:0 48px
			
			.slide 
				position:relative
				left:0
				top:0
				-webkit-transition: -webkit-transform .5s ease-in-out, opacity 500ms ease-in-out
				-moz-transition: -moz-transform .5s ease-in-out, opacity 500ms ease-in-out
				-ms-transition: -ms-transform .5s ease-in-out, opacity 500ms ease-in-out
				-o-transition: -o-transform .5s ease-in-out, opacity 500ms ease-in-out
				transition: transform .5s ease-in-out, opacity 500ms ease-in-out
			
			.deck-next, .deck-after 
				visibility:visible
				transform: translate( 200% )
			
			.deck-before, .deck-previous 
				opacity:0.4
			
		> .deck-previous 
			transform: translate( -200%, 0 )
		
		> .deck-before 
			transform: translate( -400%, 0 )
		
		> .deck-next 
			transform: translate( 200%, 0 )
		
		> .deck-after 
			transform: translate( 400%, 0 )
		
		> .deck-before, > .deck-previous 
			.slide 
				visibility:visible
			
		> .deck-child-current 
			transform: none
