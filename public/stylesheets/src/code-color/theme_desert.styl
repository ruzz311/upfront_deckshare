/* desert scheme ported from vim to google prettify */
body.deck-container 
  .slide
    pre 
      display: block; 
      background-color: #444

      .nocode 
        background-color: none; 
        color: #000
      /* string - pink */
      .str 
        color: #ffa0a0
      .kwd 
        color: #f0e68c; 
        font-weight: bold
      /* comment - skyblue */
      .com 
        color: #87ceeb
      /* type - lightgreen */
      .typ 
        color: #98fb98
      /* literal - darkred */
      .lit 
        color: #cd5c5c
      /* punctuation */
      .pun 
        color: #fff
      /* plaintext */
      .pln 
        color: #fff
      /* html/xml tag - lightyellow */
      .tag 
        color: #f0e68c; 
        font-weight: bold
      /* attribute name - khaki */
      .atn 
        color: #bdb76b; 
        font-weight: bold
      /* attribute value - pink */
      .atv 
        color: #ffa0a0
      /* decimal - lightgreen */
      .dec 
        color: #98fb98

    /* Specify class=linenums on a pre to get line numbering */
    ol.linenums 
      margin-top: 0; 
      margin-bottom: 0; 
      color: #AEAEAE
      li
        &.L0, &.L1, &.L2, &.L3, &.L5, &.L6, &.L7, &.L8
          list-style-type: none
      /* Alternate shading for lines */
      /*li.L1,li.L3,li.L5,li.L7,li.L9 { }*/

    @media print
      pre 
        background-color: none
      pre, code
        .str 
          color: #060 
        .kwd 
          color: #006
          font-weight: 700 
        .com 
          color: #600
          font-style: italic 
        .typ 
          color: #404
          font-weight: 700
        .lit 
          color: #044 
        .pun 
          color: #440 
        .pln 
          color: #000 
        .tag 
          color: #006
          font-weight: 700
        .atn 
          color: #404 
        .atv 
          color: #060 