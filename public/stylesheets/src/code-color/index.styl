.deck-container
	.gist
		color: #C3CC88
		position: relative
		div 
			padding: 0
			margin: 0
		.gist-file 
			border: 1px solid rgba( #8AC147, .8 )
			font-family: Monaco, 'Andale Mono', 'Lucida Console', 'Bitstream Vera Sans Mono', 'Courier New', monospace, serif
			margin-bottom: 1em
			.gist-meta 
				overflow: hidden
				font-size: 85%
				padding: .5em
				color: #111
				background-color: rgba( #8AC147, .8 )
				a 
					color: #111
					text-decoration: underline
					&:visited 
						color: #111
					&[style]
						color: transparent!important
			.gist-data 
				overflow: auto
				word-wrap: normal
				background-color: #f8f8ff
				border-bottom: 1px solid #ddd
				font-size: 100%
				pre 
					font-family: 'Bitstream Vera Sans Mono', 'Courier', monospace
					background: transparent !important
					margin: 0 !important
					border: none !important
					padding: .25em!important
				.gist-highlight 
					background: transparent !important
					pre
						counter-reset: linenumbers
						div
							padding: 0 1.5em
							&:nth-child(odd)
								background-color: rgba( #fff, .03 )
							&:before
								background: rgba( #fff, .025 )
								border-right: 1px solid rgba( #8AC147, .25 )
								color: rgba( #8AC147, .5 )
								content: counter(linenumbers)
								counter-increment: linenumbers
								padding: 0 .25em 0 .25em
								position: absolute
								left: 0
								text-align: right
								width: auto
				.gist-line-numbers 
					background-color: #ececec
					color: #aaa
					border-right: 1px solid #ddd
					text-align: right
					span 
						clear: right
						display: block
