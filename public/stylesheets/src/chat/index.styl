
#chat, #nickname, #messages
  z-index: 9000
  display: block

#chat
  display none
  opacity 0
  position absolute
  border 1px solid #ccc
  bottom 1%
  left auto
  right 1%
  width 30em
  transition-property: transform, -webkit-transform
  transition-duration: .8s, 0.4s, 0.4s
  transition-timing-function: linear
  translatex(0)
  &.visible
    display block
    opacity 1
    translatex(500px)
  
#nickname, #connecting
  position absolute
  height 100%
  z-index 100
  left 0
  top 0
  background #fff
  text-align center
  width 100%
  font 15px Georgia
  color #666
  display block
  .wrap
    padding-top 150px

#nickname
  input
    border 1px solid #ccc
    padding 10px
    &:focus
      border-color #999
      outline 0
  #nickname-err
    color darkred
    font-size 12px
    visibility hidden

.connected
  #connecting
    display none

.nickname-set
  #nickname
    display none

#messages
  height 380px
  background #eee
  em
    text-shadow 0 1px 0 #fff
    color #999
  p
    padding 0
    margin 0
    font 12px Helvetica, Arial
    padding 5px 10px
    b
      display inline-block
      padding-right 10px
      font-weight bold
  p:nth-child(even)
    background #fafafa
  #nicknames
    background #ccc
    padding 1% 1% 2%
    font .5em Helvetica, Arial
    position absolute
    top 0
    right 0
    bottom 14%
    left 70%
    overflow-x auto
    &::-webkit-scrollbar
      width 6px
      height 6px
    &::-webkit-scrollbar-button:start:decrement, ::-webkit-scrollbar-button:end:increment
      display block
      height 10px
    &::-webkit-scrollbar-button:vertical:increment
      background-color #8AC147 
    &::-webkit-scrollbar-track-piece
      background-color #8AC147 
      -webkit-border-radius 3px
    &::-webkit-scrollbar-thumb:vertical
      height 50px
      background-color rgba( 81,76,60, 1 )
      -webkit-border-radius 3px
    &::-webkit-scrollbar-thumb:horizontal
      width 50px
      background-color #8AC147 
      -webkit-border-radius 3px
    span
      color black
      display block
      width 100%
    b
      display block
      color #333
      padding 3px 6px
      text-shadow 0 1px 0 #666
      width auto
      &.me
        cursor pointer
        color #fff
        background #999
        margin-right 5px
        border-radius 10px
        text-shadow 0 1px 0 #666
        &:focus
          outline 0
  #lines
    height 100%
    width 70%
    color #000
    overflow auto
    overflow-x hidden
    overflow-y auto
    &::-webkit-scrollbar
      width 6px
      height 6px
    &::-webkit-scrollbar-button:start:decrement, ::-webkit-scrollbar-button:end:increment
      display block
      height 10px
    &::-webkit-scrollbar-button:vertical:increment
      background-color #8AC147 
    &::-webkit-scrollbar-track-piece
      background-color #8AC147 
      -webkit-border-radius 3px
    &::-webkit-scrollbar-thumb:vertical
      height 50px
      background-color rgba( 81,76,60, 1 )
      -webkit-border-radius 3px
    &::-webkit-scrollbar-thumb:horizontal
      width 50px
      background-color #8AC147 
      -webkit-border-radius 3px

#send-message
  background #fff
  position relative
  input
    border none
    height 2em
    padding 0 1%
    line-height 30px
    vertical-align middle
    width 72%
    &:focus
      outline 0
  button
    position absolute
    top 0px
    height 2em
    background linear-gradient(top, rgb(138, 193, 71) 0%, rgb(138, 193, 71) 100%)
    color #fff
    border rgba( 51,49,38, 1 )
    text-shadow 1px 1px 3px rgba( 0,0,0, .5)
    &.send
      right 5em
    &.cancel
      right 0px

button
  download-button()

#chatmenu
  position absolute
  bottom 0
  right 0
  z-index 200
  .toggle
    color #fff
    cursor pointer
    display inline-block
    position relative
    opacity .40
    text-decoration none
    transition opacity .4s linear
    width 72px
    height 72px
    &:hover
      opacity 1
    .count
      position absolute
      top 0
      left 0
      font-size .5em